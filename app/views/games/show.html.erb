<div class="warning">
  <% if flash[:letter].present? && !@game.win? && !@game.lose? %>
    <%= flash[:letter]  %>
  <% end %>

  <% if notice.present? %>
    <%= notice %>
  <% else %>
    <% if @game.lose? %> Você perdeu o jogo <% end %>
    <% if @game.win?  %> Você ganhou        <% end %>
  <% end %>
</div>

<%= render 'stickman' %>

<br /><br />

<% if @game.win? || @game.lose? %>
  <%= render 'end_game' %>
<% else %>
  <%= render 'word' %>
<% end %>

<br /> <br />

Escolha uma letra: <br />

<% @game.guesses.each do |letter| %>
  <%= button_to letter, game_path(@game, letter: letter), style: 'float: left', method: :patch, disabled: @game.win? || @game.guessed?(letter), form: { id: "form_#{letter}" } %>
<% end %>

<br /><br />

<%= link_to 'Voltar', root_path %>
