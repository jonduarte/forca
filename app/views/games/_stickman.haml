%div(style="width: 50px; padding: 20px; height: 150px; float: left; margin-right: 10px; margin-bottom: 200px;")
  %svg(width="50" height="150" xmlns="http://www.w3.org/2000/svg" style="vector-effect: non-scaling-stroke;")
    - if @game.stage > 0 || @game.lose?
      %ellipse#face(ry="24" rx="24" cy="25" cx="25" stroke-width="1.5" stroke="#000" fill="#fff")

    - if @game.stage > 1 || @game.lose?
      %line#body(y2="49" x2="25" y1="99" x1="25" stroke-width="1.5" stroke="#000" fill="none")

    - if @game.stage > 2 || @game.lose?
      %line#arm-right(y2="91" x2="1" y1="50" x1="25" stroke-width="1.5" stroke="#000" fill="none")

    - if @game.stage > 3 || @game.lose?
      %line#arm-left(y2="91" x2="49" y1="50" x1="25" stroke-width="1.5" stroke="#000" fill="none")

    - if @game.stage > 4 || @game.lose?
      %line#leg-right(y2="150" x2="5" y1="99" x1="25" stroke-width="1.5" stroke="#000" fill="none")

    - if @game.stage > 5 || @game.lose?
      %line#leg-left(y2="150" x2="40" y1="99" x1="25" stroke-width="1.5" stroke="#000" fill="none")

    - if @game.stage > 6 || @game.lose?
      %line#rope(y1="50" y2="50" x1="0" x2="60" stroke-width="2" stroke="#000" fill="none")
      %line#eye-right-1(y1="20" y2="25" x1="15" x2="10" stroke-width="1.5" stroke="#000" fill="none")
      %line#eye-right-2(y1="20" y2="25" x1="10" x2="15" stroke-width="1.5" stroke="#000" fill="none")
      %line#eye-left-1(y1="20" y2="25" x1="35" x2="30" stroke-width="1.5" stroke="#000" fill="none")
      %line#eye-left-2(y1="20" y2="25" x1="30" x2="35" stroke-width="1.5" stroke="#000" fill="none")
      %line#mouth(y1="36" y2="36" x1="20" x2="30" stroke-width="1.5" stroke="#000" fill="none")
